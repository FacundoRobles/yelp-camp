<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Campground Name</label>
                <input type="text" class="form-control" placeholder="Enter the name" name="campground[title]" id="title" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter the name.</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Campground Location</label>
                <input type="text" class="form-control" placeholder="Enter the location" name="campground[location]" id="location" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter the location.</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" placeholder="0.00" id="price" aria-label="Price" name="campground[price]" aria-describedby="price-label" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter the price.</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="images" class="form-label">Campground Images</label>
                <input type="file" class="form-control" id="images" name="image" multiple required>
                <div class="invalid-feedback">
                    This campground would look much better with a picture.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea type="text" class="form-control" placeholder="Description" name="campground[description]" id="description" required></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a description.</div>
                
            </div>
            
            <div class="mb-3 justify-content-between d-flex">
                <button class="btn btn-success">Add campground</button>
                <a href="/campgrounds" class="btn btn-outline-dark">All Campgrounds</a>
            </div>
        </form>
    
    </div>
</div>
